<div class="max-w-4xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-white">Curtailment Event</h1>
    <%= link_to "â† All Events", curtailment_events_path, class: "text-tg-green hover:underline" %>
  </div>

  <%
    sev_colors = { "critical" => "red", "high" => "orange", "medium" => "yellow", "low" => "blue" }
    c = sev_colors[@event.severity] || "gray"
  %>
  <div class="bg-gray-800 rounded-xl border border-<%= c %>-500/50 p-8">
    <!-- Header -->
    <div class="flex items-start justify-between mb-6">
      <div>
        <span class="px-3 py-1 bg-<%= c %>-900 text-<%= c %>-300 text-sm font-bold rounded-full uppercase"><%= @event.severity %></span>
        <h2 class="text-2xl font-bold text-white mt-3">Zone: <%= @event.grid_zone %></h2>
      </div>
      <div class="text-right text-gray-400 text-sm">
        <div>Detected: <span class="text-white"><%= @event.detected_at&.strftime("%H:%M:%S %Z") %></span></div>
        <% if @event.expires_at %>
          <div>Expires: <span class="text-white"><%= @event.expires_at.strftime("%H:%M:%S %Z") %></span></div>
        <% end %>
      </div>
    </div>

    <!-- Alert message -->
    <div class="bg-gray-900 rounded-lg p-4 mb-6 border-l-4 border-<%= c %>-400">
      <p class="text-gray-200"><%= @event.alert_message %></p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-6 mb-6">
      <div class="bg-gray-900 rounded-lg p-4 text-center">
        <div class="text-3xl font-bold text-yellow-400"><%= @event.curtailment_mw %> MW</div>
        <div class="text-gray-500 text-sm mt-1">Curtailed Power</div>
      </div>
      <div class="bg-gray-900 rounded-lg p-4 text-center">
        <div class="text-3xl font-bold text-green-400">â‚¬<%= @event.potential_savings_eur %></div>
        <div class="text-gray-500 text-sm mt-1">Potential Savings</div>
      </div>
      <div class="bg-gray-900 rounded-lg p-4 text-center">
        <div class="text-3xl font-bold text-emerald-400"><%= (@event.potential_carbon_savings_g.to_f / 1000).round(1) %> kg</div>
        <div class="text-gray-500 text-sm mt-1">Carbon Savings</div>
      </div>
    </div>

    <!-- Audio alert -->
    <% if @event.elevenlabs_audio_url.present? %>
    <div class="bg-gray-900 rounded-lg p-4">
      <h3 class="text-gray-300 font-medium mb-2">Audio Alert (ElevenLabs)</h3>
      <audio controls class="w-full">
        <source src="<%= @event.elevenlabs_audio_url %>" type="audio/mpeg">
      </audio>
    </div>
    <% end %>

    <!-- Actions -->
    <div class="flex gap-4 mt-6">
      <% if @event.active? %>
        <%= link_to "ðŸ”Š Generate Audio Alert", trigger_alert_curtailment_event_path(@event), method: :post, class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-500 transition" %>
      <% end %>
      <%= link_to "View Zone Grid Data", grid_states_path(zone: @event.grid_zone), class: "px-4 py-2 bg-gray-700 text-gray-300 rounded-lg hover:bg-gray-600 transition" %>
    </div>
  </div>
</div>
