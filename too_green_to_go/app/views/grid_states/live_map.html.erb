<div>
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-white">üåç Live Grid Map</h1>
    <%= button_to "‚ö° Refresh Grid Data", ingest_grid_states_path, method: :post, class: "px-4 py-2 bg-tg-green-600 hover:bg-tg-green-500 text-white text-sm rounded-lg" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @zones_data.each do |zone| %>
      <div class="grid-card bg-tg-dark-800 rounded-xl border border-gray-700/50 p-5 <%= 'border-tg-green-500/50 bg-tg-green-900/5' if zone[:surplus] %>">
        <div class="flex items-center justify-between mb-3">
          <div class="flex items-center space-x-2">
            <span class="text-lg font-bold text-white"><%= zone[:zone] %></span>
            <% if zone[:surplus] %>
              <span class="px-2 py-0.5 text-[10px] bg-tg-green-500/20 text-tg-green-400 rounded-full font-medium pulse-green">‚ö° SURPLUS</span>
            <% end %>
          </div>
          <span class="px-2 py-0.5 text-[10px] bg-tg-dark-700 rounded text-gray-400"><%= zone[:dominant_source] %></span>
        </div>

        <!-- Visual carbon gauge -->
        <div class="mb-4">
          <div class="flex items-center justify-between text-xs text-gray-500 mb-1">
            <span>Carbon Intensity</span>
            <span class="font-bold <%= zone[:carbon_intensity] < 100 ? 'text-tg-green-400' : zone[:carbon_intensity] < 250 ? 'text-yellow-400' : 'text-red-400' %>"><%= zone[:carbon_intensity] %> gCO‚ÇÇ/kWh</span>
          </div>
          <div class="w-full bg-tg-dark-700 rounded-full h-2">
            <% pct = [(zone[:carbon_intensity] / 500.0 * 100), 100].min %>
            <div class="h-2 rounded-full <%= pct < 20 ? 'bg-tg-green-400' : pct < 50 ? 'bg-yellow-400' : 'bg-red-400' %>" style="width: <%= pct %>%"></div>
          </div>
        </div>

        <!-- Renewable gauge -->
        <div class="mb-4">
          <div class="flex items-center justify-between text-xs text-gray-500 mb-1">
            <span>Renewable Mix</span>
            <span class="font-bold text-tg-green-400"><%= zone[:renewable_pct] %>%</span>
          </div>
          <div class="w-full bg-tg-dark-700 rounded-full h-2">
            <div class="bg-tg-green-400 h-2 rounded-full" style="width: <%= zone[:renewable_pct] %>%"></div>
          </div>
        </div>

        <div class="grid grid-cols-3 gap-2 text-center text-xs">
          <div class="bg-tg-dark-700/50 rounded p-2">
            <p class="text-gray-600">Price</p>
            <p class="font-bold text-blue-400">‚Ç¨<%= zone[:energy_price] %>/MWh</p>
          </div>
          <div class="bg-tg-dark-700/50 rounded p-2">
            <p class="text-gray-600">Curtailment</p>
            <p class="font-bold text-<%= zone[:curtailment_mw] > 100 ? 'tg-green' : 'gray' %>-400"><%= zone[:curtailment_mw] %> MW</p>
          </div>
          <div class="bg-tg-dark-700/50 rounded p-2">
            <p class="text-gray-600">Forecast 1h</p>
            <p class="font-bold text-gray-300"><%= zone[:forecast_1h] %></p>
          </div>
        </div>

        <div class="mt-3 flex items-center justify-between text-[10px] text-gray-500">
          <span>Nodes: <%= zone[:nodes_total] %> total, <%= zone[:nodes_available] %> available</span>
          <span class="text-tg-green-500"><%= zone[:nodes_green] %> green</span>
        </div>
      </div>
    <% end %>
  </div>
</div>
